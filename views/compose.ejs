<%- include("partials/header") -%>
    <h1>Compose new post</h1>

    <div class="col-lg-6">
        <form class="posting-form" action="/compose" method="post">
            <div class="form-group">
                <div>
                    <label class="control-label" for="titlelabel">Title</label>
                </div>
                <div class="col-lg-6">
                    <input type="text" class="form-control" id="titlelabel" placeholder="New title" name="postTitle">
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label class="control-label" for="comment">Post</label>
                </div>
                <div class="col-lg-6">
                    <textarea name="postBody" class="form-control" rows="5" id="comment" placeholder="... what's up today..."></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
    </div>
    </form>
    </div>




    <%- include("partials/footer") -%>